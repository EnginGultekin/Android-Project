<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E5FF"
    android:backgroundTint="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        insetButton="6dp"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="#4500FFC4"
        android:foregroundGravity="center"
        android:gravity="center"
        android:inputType="text"
        android:insetTop="6dp"
        android:isScrollContainer="false"
        android:text="Enter the information you want to save"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/buttons"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:background="@color/purple_700"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:insetTop="6dp"
        android:onClick="save"
        android:scrollbarSize="6dp"
        android:text="Save Information"
        android:textColor="#C3ED09"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#090A0B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385" />

    <EditText
        android:id="@+id/editTextString"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="Enter Info in This Field"
        android:inputType="text"
        android:textAlignment="center"

        android:textColorHint="#DDFFAA"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.595" />

    <CheckBox
        android:id="@+id/onay"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Onayla"
        android:textColor="#DDAAFF"
        android:textSize="24dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttons"
        app:layout_constraintVertical_bias="0.148" />

    <RadioGroup
        android:id="@+id/sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttons"
        app:layout_constraintVertical_bias="0.177">

        <RadioButton
            android:id="@+id/erkek"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Erkek"
            android:textAlignment="center"
            android:textColor="#1133FF"
            android:textSize="24dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="311dp" />

        <RadioButton
            android:id="@+id/kadin"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="KadÄ±n"
            android:textAlignment="center"
            android:textColor="#FF55FF"
            android:textSize="24dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="378dp" />
    </RadioGroup>

    <ToggleButton
        android:id="@+id/onoff"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="90dp"
        android:background="@color/black"
        android:checked="false"
        android:clickable="false"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#119922"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sec"
        app:layout_constraintVertical_bias="1.0" />

    <Spinner
        android:id="@+id/spiner"
        android:layout_width="193dp"
        android:layout_height="40dp"
        android:background="#677788"
        android:backgroundTintMode="add"
        android:gravity="center"
        android:prompt="@array/telefonModu"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onay"
        app:layout_constraintVertical_bias="0.429" />

</androidx.constraintlayout.widget.ConstraintLayout>










